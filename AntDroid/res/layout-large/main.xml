<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_class"
    android:background="@drawable/background_pot"
    android:weightSum="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.99">

            </LinearLayout>

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgLogin"
                android:background="@drawable/login_selector"
                android:layout_marginRight="3dp" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgLogout"
                android:background="@drawable/logout_selector"
                android:layout_marginRight="3dp" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgSetting"
                android:background="@drawable/setting_selector"
                android:layout_marginRight="3dp" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgClose"
                android:background="@drawable/close_selector"
                android:layout_marginRight="3dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:weightSum="1"
            android:layout_weight="0.03">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imvUser"
                android:background="@drawable/user_out"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="User Is Logout"
                android:id="@+id/txtUserLogin"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Not Acces"
                android:id="@+id/txtStatus"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.69"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                >

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.04">
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Disconnected"
                    android:id="@+id/txtSatatusConnect"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgConnect"
                    android:background="@drawable/connect_selector"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0 0000"
            android:id="@+id/txtNomor"
            android:layout_gravity="center_horizontal"
            android:textSize="120dp"
            android:textStyle="bold"
            android:textColorHighlight="@android:color/black"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0000"
            android:id="@+id/txtTotQueue"
            android:textAlignment="textStart"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="450dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0000"
            android:id="@+id/txtTotHolding"
            android:textAlignment="textStart"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="450dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgCall"
            android:background="@drawable/call_selector"
            android:layout_marginLeft="60dp"
            android:layout_weight="0" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgTransfer"
            android:layout_weight="0"
            android:background="@drawable/transfer_selector"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="1"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgRecall"
            android:background="@drawable/recall_selector"
            android:layout_marginLeft="60dp"
            android:layout_weight="0" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgStart"
            android:background="@drawable/start_selector"
            android:layout_weight="0"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgPending"
            android:background="@drawable/pending_selector"
            android:layout_marginLeft="60dp"
            android:layout_weight="0" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgFinish"
            android:background="@drawable/finish_selector"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/imgCallPending"
            android:background="@drawable/callpending_selector"
            android:layout_marginLeft="60dp"
            android:layout_weight="0" />
    </LinearLayout>

</LinearLayout>