<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="blinkText" parent="normalText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="normalTextNumber" parent="@android:style/TextAppearance">
        <item name="android:textSize">65sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="blinkTextNumber" parent="normalTextNumber">
        <item name="android:textSize">65sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>